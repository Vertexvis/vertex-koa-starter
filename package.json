{
  "name": "vertex-koa",
  "version": "0.0.1",
  "description": "Vertex Koa Starter.",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "clean": "rm -rf dist/ node_modules/",
    "dev": "tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 dist/index.js'",
    "format": "prettier --write './**/*.+(js|jsx|ts|tsx|json|yml|yaml|md|mdx|html|css)'",
    "lint": "eslint --ext .ts,.js --ignore-path ./.gitignore .",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@vertexvis/api-client-node": "^0.22.1",
    "async": "^3.2.5",
    "dotenv": "^9.0.2",
    "koa": "^2.14.2",
    "koa-helmet": "^6.1",
    "koa-router": "^10.1.1",
    "pino": "^6.14.0"
  },
  "devDependencies": {
    "@types/async": "^3.2",
    "@types/koa": "^2.13",
    "@types/koa-helmet": "^6.0",
    "@types/koa-router": "^7.4",
    "@types/node": "^15.0",
    "@types/pino": "^6.3",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.3",
    "tsc-watch": "^4.2",
    "typescript": "^4.2"
  },
  "engines": {
    "node": ">=12.10"
  }
}
