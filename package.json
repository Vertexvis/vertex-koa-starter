{
  "name": "typescript-node",
  "version": "2.1.0",
  "description": "TypeScript template for backend applications.",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/Talento90/typescript-node.git"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "rm -rf dist && tsc -w",
    "clean": "rm -rf dist",
    "lint": "tslint 'src/**/*.ts'",
    "start": "node dist/index.js",
    "start:dev": "tsc-watch --onSuccess 'node --inspect=0.0.0.0:5858 dist/index.js'"
  },
  "dependencies": {
    "@vertexvis/vertex-api-client": "^0.6.7",
    "async": "^3.2.0",
    "fast-xml-parser": "^3.17.6",
    "joi": "^14.3.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.0.0",
    "koa-router": "^10.0.0",
    "pino": "^6.11.0"
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/joi": "^14.3.3",
    "@types/koa": "^2.11.7",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^6.0.1",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.14.22",
    "@types/pino": "^6.3.5",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "tsc-watch": "^4.2.9",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=12.10.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
